#!/bin/bash -x

STUNNEL_VER=5.35

if [ ! -d /tmp/stunnel-${STUNNEL_VER} ]; then
    cd /tmp

    curl -O https://www.stunnel.org/downloads/stunnel-${STUNNEL_VER}.tar.gz

    tar zxf stunnel-${STUNNEL_VER}.tar.gz && cd stunnel-${STUNNEL_VER}

    ./configure && make

    cp src/stunnel /tmp/
fi

mv /tmp/src/stunnel.conf /tmp/
mv /tmp/src/stunnel.pem /tmp/

source ${STI_SCRIPTS_PATH}/assemble